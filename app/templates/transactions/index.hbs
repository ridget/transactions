<form {{action "createTransaction" on="submit"}}>
  <label for="transaction-name">Name:</label>
  {{input type="text" value=newTransaction.name id="name"}}

  <label for="transaction-amount">Amount:</label>
  {{input value=newTransaction.dollarValue id="comp-currency"}}

  {{view Ember.Select content=categoriesLookup optionValuePath="content.id"
  optionLabelPath="content.name" prompt="Select a Category"
  class="form-control" id="input-categories" selection=newTransaction.category }}
  <button type="submit">Save Transaction</button>
</form>

<ul>
  {{#each controller}}
    <li>{{name}} {{to-currency amount}} {{formatted-date occurredOn 'MMMM Do, YYYY'}} {{category.name}}</li>
  {{/each}}
</ul>
